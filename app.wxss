/**app.wxss**/
@import "pages/Template/footer/footer.wxss";  

.body{
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
}
Page{
  background-color: #f8f8f8;
  margin: 0;
  padding: 0;
  color: #333333;
  font-size: 13px;
  box-sizing: border-box;
}
/**文字**/
.gray-text{
  color: #666666;
}
.red-text{
  color:#f2582a;
}
/**上边框**/
.border-befor:before,.border-after:after{
    content: " ";
    position: absolute;
    left: 0;
    right: 0;
    height: 1px;
    border-top: 1px solid #e5e5e5;
    color: #e5e5e5;
    -webkit-transform-origin: 0 0;
    transform-origin: 0 0;
    -webkit-transform: scaleY(0.5);
    transform: scaleY(0.5);
    z-index: 2;
}
.border-befor:before{
  top: 0;
}
.border-after::after{
  bottom:-1px;
}


/**布局**/
.flex-wrp{
  display: flex;
  display: -webkit-flex;
  -webkit-flex-wrap:nowrap;
	flex-wrap:nowrap;
}
.flex{
  display:-webkit-flex;
	display:flex;
  -webkit-flex-wrap:wrap;
	flex-wrap:wrap;
}
.flex-item{
  flex: 1;
}
.flex-justify{
  -webkit-justify-content:space-between;
	justify-content:space-between;
}
.flex-algin-c{
    -webkit-align-self: center;
	  align-self: center;
}
.flex-algin-e{
  -webkit-align-self: flex-end;
	align-self: flex-end;
}
.box{
  background-color: #fff;
  margin-bottom: 30rpx;
}
.pt-30{
  padding-top: 30rpx;
}

/**字体图标**/
