.footer{
    height: 50px;
    background-color: #ffffff;
    position: absolute;
    left: 0;
    right: 0;
    bottom: 0;
    flex-direction:row;
    font-size: 12px;
    color: #7e7f80;
    z-index: 800;
}
.footer .menu,.footer .sel,.footer .my,.footer .store-menu,.footer .store-dt,.footer .store-center{
    text-align: center;
    padding-top: 7px;
}
.footer .menu::before,.footer .sel::before,.footer .my::before,.footer .store-menu::before,.footer .store-dt::before,.footer .store-center::before{
    font-family: "iconfont";
    display: block;
    font-size: 20px;
}
.footer .menu::before{
    content: '\e611';
}
.footer .sel::before{
    content: '\e64f';
}
.footer .my::before{
    content: '\e61b';
}
.footer .store-menu::before{
    content: '\e611';
}
.footer .store-dt::before{
    content: '\e616';
}
.footer .store-center::before{
    content: '\e600';
}
.footer .active{
  color: #f2582a;
}