.code-box{
    width: 100%;
    height: auto;
    padding: 15px 0;
    text-align: center;
}
.qr-code{
    width: 230px;
    height: 230px;
}
.code-box text{
    color: #9d9d9d;
}
.staff-head{
    position: relative;
}
.staff-head .del-staff{
    position: absolute;
    right: 5px;
    top: -5px;
}
.staff-head .del-staff::before{
    content: "\e6b2";
    font-family: "iconfont";
    color: #f2582a;
    font-size: 20px;
}
.new-staff-head{
    width: 50px;
    height: 50px;
    border-radius: 50%;
}
.add-staff{
    padding: 15px 0;
}
.add-staff .staff-text{
    padding-top: 18px;
    margin-left: 5px;
}
.add-staff .staff-btn{
    padding-top: 6px;
    margin-left: 8px;
}