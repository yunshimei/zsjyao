.body .entr-bge{
    width: 100%;
    height: 100%;
}
.wx-hd{
    width: 60px;
    height: 60px;
    border-radius: 50%;
    position: absolute;
    top: 90px;
    left: 50%;
    transform: translateX(-50%);
    -webkit-transform: translateX(-50%);
}
.enter-btn{
    width: 90px;
    height: 30px;
    line-height: 30px;
    text-align: center;
    border-radius: 20px;
    background-color: #f2582a;
    color: #fff;
    position: absolute;
    bottom: 130px;
    left: 50%;
    transform: translateX(-50%);
    -webkit-transform: translateX(-50%);
    
}
.sm-dc{
    color: #4d4948;
    font-size: 16px;
    text-align: center;
    position: absolute;
    bottom: 80px;
    left: 50%;
    transform: translateX(-50%);
    -webkit-transform: translateX(-50%);
}
.sm-dc::before{
    content: "\e646";
    font-family: "iconfont";
    margin-right: 5px;
}